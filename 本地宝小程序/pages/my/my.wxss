/* 头像部分 */
.headPic{
  width: 100%;
  height: 300rpx;
  background-color: #2177c7;
  position: relative;
}
.headPic .img{
  width: 180rpx;
  height: 180rpx;
  position: absolute;
  top: 20%;
  left: 50%;
  transform: translate(-50%);
  border-radius: 50%;
  box-shadow: 1rpx 0rpx 200rpx 10rpx #fff;
  overflow: hidden;
}
.block{
  margin: 30rpx 0;
  font-size: 36rpx;
}
.block view{
  background-color: #fff;
  padding: 20rpx 30rpx;
  margin-bottom: 2rpx;
}